# Backend Environment Variables Template
# Copia este archivo como .env y configura los valores apropiados

# Server Configuration
BACKEND_URL=http://localhost:4000
PORT=4000

# Database Configuration
DB_HOST=localhost
DB_USER=tu_usuario_db
DB_PASSWORD=tu_password_db
DB_NAME=recipes

# JWT Configuration (genera una clave segura aleatoria)
JWT_SECRET=genera_una_clave_jwt_segura_de_al_menos_64_caracteres

# Environment
NODE_ENV=development

# CORS Configuration
CLIENT_ORIGIN=http://localhost:5173

# Cloudflare Configuration
USE_CLOUDFLARE=false

# Para Cloudflare tunnel, usar:
# CLIENT_ORIGIN=https://dev.tudominio.com
# USE_CLOUDFLARE=true